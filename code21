// find first nd last digit
#include <stdio.h>
int main()

{
    int n, sum=0,fDigit,lDigit;
    printf("Enter number = ");
    scanf("%d", &n);

    lDigit = (n % 10);
 
    while(n >= 10)
    {
        n = (n / 10);
    }
    fDigit = n;
    printf("first digit = %d and last digit = %d\n\n", fDigit,lDigit);
    return 0;
    }
